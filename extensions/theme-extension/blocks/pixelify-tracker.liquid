{% comment %}
  Pixel Tracker - Theme App Extension (App Embed)
  Dynamically fetches and uses real pixel IDs from your Pixelify dashboard
{% endcomment %}

{% if block.settings.enable_tracking %}
<script>
(function() {
  'use strict';
  
  var SHOP = '{{ shop.permanent_domain }}';
  var DEBUG = {{ block.settings.debug_mode | json }};
  var PROXY_URL = '/apps/pixel-api';
  
  if (DEBUG) console.log('[PixelTracker] Starting for shop:', SHOP);

  // Retry logic
  var retryCount = 0;
  var maxRetries = 3;
  var retryDelay = 1000;
  
  function fetchPixelConfig() {
    // Get current domain for website-specific pixel assignment
    var currentDomain = window.location.hostname;
    
    // Fetch the pixel configuration from the API with domain context
    var url = PROXY_URL + '/get-pixel-id?shop=' + encodeURIComponent(SHOP) + '&domain=' + encodeURIComponent(currentDomain);
    
    if (DEBUG) console.log('[PixelTracker] Fetching config for domain:', currentDomain);
    
    return fetch(url, {
      method: 'GET',
      headers: { 'Accept': 'application/json' }
    })
    .then(function(res) {
      var contentType = res.headers.get('content-type') || '';
      if (!contentType.includes('application/json')) {
        return res.text().then(function(text) {
          if (DEBUG) console.error('[PixelTracker] Non-JSON response:', text.substring(0, 200));
          throw new Error('Server returned non-JSON response');
        });
      }
      if (!res.ok) {
        return res.text().then(function(text) {
          try {
            var data = JSON.parse(text);
            throw new Error(data.error || 'API request failed');
          } catch (e) {
            // If not JSON or parsing failed, use status
            throw new Error('API request failed: ' + res.status + ' ' + res.statusText);
          }
        });
      }
      return res.json();
    });
  }
  
  function initializeTracker(data) {
    // Log the full response for debugging
    console.log('[PixelTracker] Full API Response:', JSON.stringify(data, null, 2));

    // STRICT: If tracking is disabled or domain doesn't match, DO NOT initialize pixel
    if (data.error || data.trackingDisabled || data.domainMatch === false) {
      console.warn('[PixelTracker] ‚ùå Tracking DISABLED for this domain');
      console.warn('[PixelTracker] Domain Match:', data.domainMatch);
      console.warn('[PixelTracker] Reason:', data.message || data.error || 'Domain not assigned to any pixel');
      if (data.availableAssignments) {
        console.warn('[PixelTracker] Available pixel assignments:', data.availableAssignments);
      }
      return; // DO NOT initialize any tracking
    }
    
    // Check if domainMatch is explicitly true
    if (data.domainMatch !== true) {
      console.warn('[PixelTracker] ‚ö†Ô∏è domainMatch is not true:', data.domainMatch);
      console.warn('[PixelTracker] This might indicate a problem with domain assignment');
    }
    
    // Domain matched - proceed with tracking
    console.log('[PixelTracker] ‚úÖ Domain match confirmed:', data.domainMatch);
    console.log('[PixelTracker] ‚úÖ Pixel:', data.appName, '| Assigned Domain:', data.websiteDomain, '| Current Domain:', data.currentDomain);
    
    // Store configuration globally
    window.PIXEL_TRACKER_ID = data.pixelId;
    window.PIXEL_TRACKER_NAME = data.appName;
    window.PIXEL_TRACKER_CONFIG = data.config || {};
    window.PIXEL_TRACKER_CUSTOM_EVENTS = data.customEvents || [];
    window.PIXEL_TRACKER_WEBSITE_DOMAIN = data.websiteDomain || null;
    
    // Load tracking script with the real pixel ID
    var params = new URLSearchParams();
    params.set('id', data.pixelId);
    params.set('shop', SHOP);
    
    var script = document.createElement('script');
    script.async = true;
    script.src = PROXY_URL + '/pixel.js?' + params.toString();
    script.onload = function() {
      console.log('[PixelTracker] ‚úÖ Tracking script loaded for:', data.appName);
    };
    script.onerror = function() {
      console.error('[PixelTracker] Failed to load tracking script');
    };
    document.head.appendChild(script);
    
    // Initialize Facebook Pixel if configured
    if (data.metaPixelId && data.enabled) {
      try {
        !function(f,b,e,v,n,t,s)
        {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
        n.callMethod.apply(n,arguments):n.queue.push(arguments)};
        if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
        n.queue=[];t=b.createElement(e);t.async=!0;
        t.src=v;s=b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t,s)}(window, document,'script',
        'https://connect.facebook.net/en_US/fbevents.js');
        fbq('init', data.metaPixelId);
        fbq('track', 'PageView');
        console.log('[PixelTracker] ‚úÖ Facebook Pixel initialized:', data.metaPixelId);
      } catch (fbError) {
        console.warn('[PixelTracker] Facebook Pixel error:', fbError);
      }
    }
  }
  
  function attemptInitialization() {
    fetchPixelConfig()
      .then(initializeTracker)
      .catch(function(err) {
        retryCount++;
        console.error('[PixelTracker] Init failed (attempt ' + retryCount + '/' + maxRetries + '):', err.message);

        // Don't retry on 404 errors (app not installed)
        var is404Error = err.message.includes('404') || err.message.includes('Not Found');

        if (!is404Error && retryCount < maxRetries) {
          if (DEBUG) console.log('[PixelTracker] Retrying in ' + retryDelay + 'ms...');
          setTimeout(attemptInitialization, retryDelay);
          retryDelay *= 2;
        } else {
          if (is404Error) {
            console.warn('[PixelTracker] App not installed on this shop. Tracking disabled.');
          } else {
            console.error('[PixelTracker] Failed after ' + maxRetries + ' attempts. Tracking disabled.');
          }
        }
      });
  }
  
  // Start initialization
  attemptInitialization();
})();
</script>
{% endif %}

{% schema %}
{
  "name": "Pixel Tracker",
  "target": "body",
  "settings": [
    {
      "type": "header",
      "content": "üéØ Pixel Tracking"
    },
    {
      "type": "paragraph",
      "content": "This extension automatically uses your active pixel from the Pixelify dashboard. Manage your pixels at: /admin/apps/pixelify"
    },
    {
      "type": "checkbox",
      "id": "enable_tracking",
      "label": "Enable Tracking",
      "default": true,
      "info": "Turn on/off all pixel tracking"
    },
    {
      "type": "checkbox",
      "id": "debug_mode",
      "label": "Debug Mode",
      "default": false,
      "info": "Show detailed logs in browser console"
    }
  ]
}
{% endschema %}
